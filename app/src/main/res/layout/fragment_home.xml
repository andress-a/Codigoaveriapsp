<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header with gradient background -->
    <androidx.cardview.widget.CardView
        android:id="@+id/header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/header_gradient"
            android:padding="24dp">

            <!-- App Logo -->

            <!-- Welcome Text with better styling -->
            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bienvenido a"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:alpha="0.9"/>

            <TextView
                android:id="@+id/app_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carfix Upkeep"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <!-- Short app description -->
            <TextView
                android:id="@+id/app_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tu compañero para diagnóstico automotriz"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:alpha="0.8"
                android:layout_marginTop="8dp"/>

            <!-- Quick action button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escanear ahora"
                android:textAllCaps="false"
                app:cornerRadius="24dp"
                android:layout_marginTop="16dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                app:icon="@drawable/ic_delete"
                app:iconGravity="textStart"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ScrollView to hold all model sections -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_card"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Container for model sections -->
        <LinearLayout
            android:id="@+id/models_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Model sections will be added here dynamically -->

            <!-- Recent scans section -->

            <!-- Models section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modelos de vehículos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>